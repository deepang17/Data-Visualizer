@using Microsoft.AspNet.Identity
 <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DataVizualizer</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <meta charset="utf-8">
    <title>DataVizualizer</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="~/Content/img/favico.png" rel="icon">
    <link href="~/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800|Montserrat:300,400,700" rel="stylesheet">

    <!-- Bootstrap CSS File -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Libraries CSS Files -->
    <link href="~/Content/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/lib/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/Content/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/lib/magnific-popup/magnific-popup.css" rel="stylesheet">
    <link href="~/Content/lib/ionicons/css/ionicons.min.css" rel="stylesheet">


</head>
<body>
    <section id="topbar" class="d-none d-lg-block">
        <div class="container clearfix">
            <div class="contact-info float-left">
                <i class="fa fa-envelope-o"></i> <a href="mailto:drawgraphs@gmail.com">drawgraphs@gmail.com</a>
                <i class="fa fa-phone"></i> +91 9918322677
            </div>
            <div class="social-links float-right">
                <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                <a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>
                <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
            </div>
        </div>
    </section>

    <!--==========================
      Header
    ============================-->
    <header id="header" style="margin-bottom:20px">
        <div class="container">

            <div id="logo" class="pull-left">
                <h1 style="font-size:36px;"><a href="/HomePage/Index/#body" class="scrollto">Data<span>Vizualizer</span></a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="#body"><img src="img/logo.png" alt="" title="" /></a>-->
            </div>
            <form action="/Account/LogOff" method="post" id="logoutForm">@Html.AntiForgeryToken()</form>

            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li class="menu-active"><a href="/HomePage/Index/#body">Home</a></li>
                    <li><a href="/HomePage/Index/#about">About Us</a></li>
                    <li><a href="/HomePage/Index/#services">Services</a></li>
                    <li><a href="/HomePage/Index/#portfolio">Graphs</a></li>
                    <li><a href="/HomePage/Index/#team">Team</a></li>
                    <!-- <li class="menu-has-children">
        <a href="">Drop Down</a>
        <ul>
            <li><a href="#">Drop Down 1</a></li>
            <li><a href="#">Drop Down 3</a></li>
            <li><a href="#">Drop Down 4</a></li>
            <li><a href="#">Drop Down 5</a></li>
        </ul>
    </li>-->
                    <li><a href="/HomePage/Index/#contact">Contact</a></li>
                    <li><a href="@Url.Action("Documentation", "HomePage")">Documentation</a></li>
                    @if (Request.IsAuthenticated)
                    {

                        <li>
                            <a href="/UserProfile/Index">Hello @User.Identity.Name!</a>

                        </li>
                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="/Account/Register">Register</a>
                        </li>
                        <li><a href="/Account/Login">Log in</a></li>


                    }
                </ul>

                </nav><!-- #nav-menu-container -->
            </div>
        </header><!-- #header -->
    

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer style="display:none;">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        <!-- JavaScript Libraries -->
        <script src="~/Scripts/lib/jquery/jquery.min.js"></script>
        <script src="~/Scripts/lib/jquery/jquery-migrate.min.js"></script>
        <script src="~/Scripts/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/Scripts/lib/easing/easing.min.js"></script>
        <script src="~/Scripts/lib/superfish/hoverIntent.js"></script>
        <script src="~/Scripts/lib/superfish/superfish.min.js"></script>
        <script src="~/Scripts/lib/wow/wow.min.js"></script>
        <script src="~/Scripts/lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="~/Scripts/lib/magnific-popup/magnific-popup.min.js"></script>
        <script src="~/Scripts/lib/sticky/sticky.js"></script>

        <!-- Contact Form JavaScript File -->
        <script src="~/Scripts/contactform.js"></script>

        <!-- Template Main Javascript File -->
        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/main.js"></script>
    </body>
</html>
